<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/white"
    tools:context="com.shappe.shappe.whitemusic"
    >

    <RelativeLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textGrid1"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="cursive"
            android:text="@string/white"
            android:textColor="@color/black"
            android:textSize="44sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/white1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/textGrid1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:background="@drawable/white1"
            android:contentDescription="@string/quiz"
            android:onClick="open11"
            />

        <ImageView
            android:id="@+id/white2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/white1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/white2"
            android:contentDescription="@string/white"
            android:onClick="open22"/>


        <ImageView
            android:id="@+id/white3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/white2"
            android:layout_marginTop="15dp"
            android:background="@drawable/white3"
            android:contentDescription="@string/white"
            android:onClick="open33"/>
        <ImageView
            android:id="@+id/white4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/white3"
            android:layout_marginTop="15dp"
            android:background="@drawable/white4"
            android:contentDescription="@string/white"
            android:onClick="open44"/>
        <ImageView
            android:id="@+id/white5"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/white4"
            android:layout_marginTop="15dp"
            android:background="@drawable/white5"
            android:contentDescription="@string/white"
            android:onClick="open55"/>
    </RelativeLayout>




</ScrollView>
